<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.NewArticleActivity" android:orientation="vertical">

    <EditText
            android:layout_weight="1"
            android:hint="title"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/new_title_et"/>
    <EditText
            android:layout_weight="6"
            android:hint="content"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/new_content_et" android:gravity="start"/>
</LinearLayout>